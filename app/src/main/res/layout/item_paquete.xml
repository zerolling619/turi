<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="210dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:clipToPadding="false"
    android:elevation="6dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Background image with rounded corners -->
    <ImageView
        android:id="@+id/imgPaquete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_tarapoto_foreground"
        android:background="@drawable/none_tras"
        android:contentDescription="Imagen paquete"
        android:adjustViewBounds="true"
        android:clipToOutline="true" />

    <!-- Gradient overlay (bottom fade) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9" />

    <!-- Title text at bottom-left -->
    <TextView
        android:id="@+id/tvTituloPaquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:text="Tarapoto"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Favorite heart circular button top-right -->
    <FrameLayout
        android:id="@+id/flHeart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_blue_bg"
        android:foreground="@drawable/circle_blue_bg">

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_heart" />

    </FrameLayout>

</FrameLayout>