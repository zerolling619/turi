<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fd_celeste_degrade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Verification_code">

    <!-- Título -->
    <TextView
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="35dp"
        android:gravity="center"
        android:text="Codigo de verificaciòn"
        android:textSize="30sp"
        android:textColor="@color/azul_oscuro"
        android:textStyle="bold"/>

    <!-- Terminos de verificacion -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginVertical="150dp"
        android:layout_marginHorizontal="35dp"
        android:gravity="center"
        android:text="Ingresa el código de verificación enviado para confirmar tu identidad y continuar con el proceso de registro o acceso."
        android:textSize="12sp"
        android:textColor="@color/azul_oscuro" />

    <!-- Example correo-->
    <TextView
        android:id="@+id/tvCorreoVerificacion"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="240dp"
        android:gravity="center"
        android:text="Enviar a example@hotmail.com"
        android:textColor="@color/azul_oscuro"
        android:textSize="18sp" />

    <!-- Caja blanca con bordes redondeados -->
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvCodigo1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fd_contorno_azu_fd_blancol"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/azul_oscuro"/>

        <TextView
            android:id="@+id/tvCodigo2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fd_contorno_azu_fd_blancol"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/azul_oscuro"/>

        <TextView
            android:id="@+id/tvCodigo3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fd_contorno_azu_fd_blancol"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/azul_oscuro"/>

        <TextView
            android:id="@+id/tvCodigo4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fd_contorno_azu_fd_blancol"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/azul_oscuro" />

    </LinearLayout>

    <!-- No puedes acceder al código-->
    <TextView
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="390dp"
        android:gravity="center"
        android:text="¿No puedes acceder al código?"
        android:textColor="@color/azul_oscuro"
        android:textSize="18sp" />

    <!-- Reenviar -->
    <TextView
        android:id="@+id/tvReenviar"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="420dp"
        android:gravity="center"
        android:text="Reenviar"
        android:textColor="@color/azul_oscuro"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="300sp"
        android:layout_height="40dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="52dp"
        android:background="@drawable/fd_btn_azul_bordes"
        android:text="Enviar"/>

</FrameLayout>