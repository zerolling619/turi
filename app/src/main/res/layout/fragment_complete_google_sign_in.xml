<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CompleteGoogleSignIn"
    android:background="@drawable/fd_celeste_degrade">

    <!-- Título -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Título -->
        <ImageView
            android:id="@+id/IcBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/fd_blanco_circulo"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="212dp"
            android:layout_height="61dp"
            android:text="Complete los campos para poder registrarse"
            android:textAlignment="center"
            android:textColor="@color/azul_oscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="112dp"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <!-- Caja blanca con bordes redondeados -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:background="@drawable/fd_blanco_bordes"
                android:orientation="vertical"
                android:padding="20dp"
                tools:ignore="MissingConstraints">

                <!-- Dni -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Dni"
                        android:textColor="@color/azul_oscuro"
                        android:textSize="10dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDni"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="true"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtDNI"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/fd_contorno_azul"
                            android:inputType="number"
                            android:maxLength="50"
                            android:padding="8dp"
                            android:paddingTop="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <!-- Fecha de Nacimiento -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="102dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Fecha de Nacimiento"
                        android:textColor="@color/azul_oscuro"
                        android:textSize="10dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFechNaci"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fd_contorno_azul"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="true"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtFechNaci"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/fd_contorno_azul"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:padding="8dp"
                            android:paddingTop="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <!-- Celular -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">

                    <!-- Celular -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Celular"
                            android:textColor="@color/azul_oscuro"
                            android:textSize="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCelular"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/fd_contorno_azul"
                            app:boxBackgroundMode="none"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtCelular"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/fd_contorno_azul"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:padding="8dp"
                                android:paddingTop="8dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </FrameLayout>

                </LinearLayout>

                <!-- Sexo -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Sexo"
                        android:textColor="@color/azul_oscuro"
                        android:textSize="10dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSexo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fd_contorno_azul"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="true"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtSexo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/fd_contorno_azul"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="Seleccionar sexo"
                            android:inputType="none"
                            android:padding="8dp"
                            android:paddingTop="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <Button
                    android:id="@+id/btnGuardarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fd_btn_azul_bordes"
                    android:text="Completar Registro"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvIniciarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Ya tienes una cuenta, Inicia Sesion"
                    android:textColor="@color/azul_oscuro"
                    android:textSize="10dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>