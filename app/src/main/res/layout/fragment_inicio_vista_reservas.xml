<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Inicio_VistaReservas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@drawable/fd_btn_azul_bordes_perfil"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IcMenuLateral"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/ic_menu_lateral" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Reservas Asignadas"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Carrusel horizontal para los botones de estado -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >
            <!-- Filtros -->
            <LinearLayout
                android:id="@+id/LinearStatusForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <Button
                    android:id="@+id/btnStatusPending"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Pendientes"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusPendingSing"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Pendiente de firma"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusPendingPay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Pendiente de pago"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusPendingPayinProcess"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Pago en proceso"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusReserve"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Reservado"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusInProcessTravel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="En proceso de viaje"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusDone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Completado"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusRejected"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Rechazado"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusConfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="Confirmado"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusCancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cancelado "
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btnStatusCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Completado"
                    android:textSize="12sp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fd_celeste_degrade">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewReservas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_reserva" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
