<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:background="@drawable/fd_btn_azul_bordes_perfil"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IcMenuLateral"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/ic_menu_lateral" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:text="Empecemos"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <!-- Locacion -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ImLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/TvLocation"
                        android:layout_width="202dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Locacion"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:text="Descubre un nuevo destino"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <!-- Buscar -->
                    <LinearLayout
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/fd_contorno_blanco_fd_transparentel">

                        <!-- Campo de texto -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="¿A dónde te gustaría ir?"
                            android:inputType="text"
                            android:maxLength="40"
                            android:paddingStart="20dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Icono de búsqueda -->
                        <ImageView
                            android:id="@+id/btnSearch"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:contentDescription="Buscar" />

                        <!-- Separador -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:background="@color/white" />

                        <!-- Botón limpiar -->
                        <ImageView
                            android:id="@+id/btnClean"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:contentDescription="Borrar texto" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fd_celeste_degrade">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <!-- Carrusel Horizontal Desplazable -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:scrollbars="none"
                    android:overScrollMode="always">

                    <!-- Lista de Paquetes (se cargan dinámicamente desde el backend) -->
                    <LinearLayout
                        android:id="@+id/LinearListaPaquetes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Los paquetes se cargan dinámicamente desde Inicio.java -->

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/LinearFiltro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearFiltroMenu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFiltro"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="Popular"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/ImFlechdown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_flecha_menu"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="65dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="-3dp"
                        android:background="@drawable/fd_btn_gris_bordes"
                        android:text="Ver todo"
                        android:textSize="8sp"
                        android:textColor="#646464"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Carrusel Vertical Desplazable -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <!-- Lista de Paquetes -->
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <!-- Include vertical package items to match the screenshot layout -->
                            <include
                                android:id="@+id/cardPopular1"
                                layout="@layout/item_paquete_vertical" />
                            <include
                                android:id="@+id/cardPopular2"
                                layout="@layout/item_paquete_vertical" />
                            <include
                                android:id="@+id/cardPopular3"
                                layout="@layout/item_paquete_vertical" />
                            <include
                                android:id="@+id/cardPopular4"
                                layout="@layout/item_paquete_vertical" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>