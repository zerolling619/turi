<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:background="@drawable/fd_btn_azul_bordes_perfil"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IcMenuLateral"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/ic_menu_lateral" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:text="Empecemos"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/fd_blanco_circulo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <!-- Locacion -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ImLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/TvLocation"
                        android:layout_width="161dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Locacion"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:text="Descubre un nuevo destino"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <!-- Buscar -->
                    <LinearLayout
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilSearch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:errorEnabled="true"
                            app:hintEnabled="false"
                            app:boxBackgroundMode="none">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtSearch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textSize="13sp"
                                android:background="@drawable/fd_contorno_blanco_fd_transparentel"
                                android:textStyle="bold"
                                android:hint="Â¿A donde te gustaria ir?"
                                android:textColorHint="@color/white"
                                android:textColor="@color/white"
                                android:maxLength="40"
                                android:padding="8dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fd_blanco_circulo" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fd_celeste_degrade">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:layout_marginTop="30dp">

                <!-- Carrusel Horizontal Desplazable -->
                <HorizontalScrollView
                    android:layout_width="384dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="210dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!-- Lista de lugares turisticos -->
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Contenedor de los lugares turisticos -->
                            <FrameLayout
                                android:id="@+id/cardPlace1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Cusco"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>

                        <!-- Lista de lugares turisticos -->
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Contenedor de los lugares turisticos -->
                            <FrameLayout
                                android:id="@+id/cardPlace2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Tarapoto"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>

                        <!-- Lista de lugares turisticos -->
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Contenedor de los lugares turisticos -->
                            <FrameLayout
                                android:id="@+id/cardPlace3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="-20dp"

                                android:background="@drawable/fd_contorno_azul_fd_transparentel">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Arequipa"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="Popular"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_flecha_menu"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="65dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="-3dp"
                        android:background="@drawable/fd_btn_gris_bordes"
                        android:text="Ver todo"
                        android:textSize="8sp"
                        android:textColor="#646464"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Carrusel Vertical Desplazable -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/cardPopular1"
                                android:layout_width="330dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_marginLeft="20dp"
                                    android:text="Tarapoto"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardPopular2"
                                android:layout_width="330dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_marginLeft="20dp"
                                    android:text="Huaraz"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardPopular4"
                                android:layout_width="330dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_marginLeft="20dp"
                                    android:text="Piura"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardPopular5"
                                android:layout_width="330dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/fd_contorno_azul_fd_transparentel"
                                android:clickable="true"
                                android:focusable="true">
                                <!-- Imagen de fondo -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:cropToPadding="false"
                                    android:padding="0dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_tarapoto_foreground" />
                                <!-- Texto de fondo -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_marginLeft="20dp"
                                    android:text="Iquitos"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>