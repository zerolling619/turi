<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ui.Package_tourTracking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fd_celeste_degrade"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <ImageView
                android:id="@+id/IcBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="37dp"
                android:background="@drawable/fd_blanco_circulo"
                android:src="@drawable/ic_back_arrow"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/white">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="320dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fd_btn_azul_bordes_transparente"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:background="@drawable/fd_btn_gris_bordes_superior">

                    <!-- Boton de desplazar -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <!-- Boton de Detalles -->
                        <TextView
                            android:id="@+id/tvDetallesDestino"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="40dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Detalles"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Boton de Tracking -->
                        <TextView
                            android:id="@+id/tvDetallesTracking"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="50dp"
                            android:background="@drawable/fd_btn_gris_oscuro_bordes"
                            android:clickable="true"
                            android:elevation="5dp"
                            android:focusable="true"
                            android:text="Tracking"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Datos del Destino -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/ImLocation"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_location" />

                    </LinearLayout>

                    <!-- Destino -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!-- Destino -->
                        <TextView
                            android:id="@+id/tvDestinoNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Destino"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                        <!-- Ciudad y pais -->
                        <TextView
                            android:id="@+id/tvCiudadPais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ciudad, pais"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- imagens -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <!-- Puntuacion -->
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:id="@+id/TvCalificacion"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/white"
                            android:text="4.5"/>

                    </LinearLayout>
                    <!-- Temperatura -->
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_thermometer"/>
                        <TextView
                            android:id="@+id/TvTemperatura"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/white"
                            android:text="25ÂºC"/>

                    </LinearLayout>
                    <!-- Dias -->
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"/>
                        <TextView
                            android:id="@+id/TvDias"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/white"
                            android:text="4 Dias"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Descripcion -->

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Ruta"
                        android:textColor="@color/white" />

                    <ScrollView
                        android:layout_width="228dp"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical">

                        <TextView
                            android:id="@+id/tvRutaContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Cargando rutas..."
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </ScrollView>

                </LinearLayout>

                <!-- Boton de reserva -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnReservar"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fd_btn_gris_oscuro_bordes"
                        android:text="Reservar"
                        android:textColor="@color/azul_oscuro"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>