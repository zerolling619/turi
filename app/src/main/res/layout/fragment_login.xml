<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fd_celeste_degrade"
    tools:context=".ui.Login">

    <!-- Título -->

    <!-- Contenedor del formulario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Inicio de Sesión"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textColor="@color/white" />

    <!-- Caja blanca con bordes redondeados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fd_blanco_bordes"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text">

        <!-- Correo -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="72dp"
                android:layout_height="11dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Correo"
                android:textColor="@color/azul_oscuro"
                android:textSize="10sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCorreo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelCorreo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/fd_contorno_azul"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contraseña -->
        <TextView
            android:id="@+id/labelPasswordd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="72dp"
                android:layout_height="14dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Contraseña"
                android:textColor="@color/azul_oscuro"
                android:textSize="10sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPasswordd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPasswordd">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPasswordd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/fd_contorno_azul"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPasswordd"
            android:background="@drawable/fd_btn_azul_bordes" />

        <!-- Divisor "O inicia con" -->
        <View
            android:id="@+id/divider_start"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/azul_oscuro"
            app:layout_constraintBottom_toBottomOf="@+id/or_text"
            app:layout_constraintEnd_toStartOf="@+id/or_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/or_text" />

        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="O inicia con"
            android:textColor="@color/azul_oscuro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnIniciarSesion" />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/azul_oscuro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/IcGoogle"
                android:layout_width="30dp"
                android:layout_height="30dp"
         android:layout_marginLeft="125dp"
                android:src="@drawable/ic_google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOlvidastePasswordd"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/azul_oscuro"
                android:textSize="10sp" />

        <TextView
            android:id="@+id/tvRegistrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="¿Aún no tienes una cuenta? Regístrate"
            android:textColor="@color/azul_oscuro"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOlvidastePasswordd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>