<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="4dp">

    <!-- Bullet circle -->
    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/fd_btn_azul_bordes_transparente" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRouteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trayecto 1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#0D2231" />

        <TextView
            android:id="@+id/tvRouteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del trayecto"
            android:textSize="13sp"
            android:textColor="#4B5563" />
    </LinearLayout>

</LinearLayout>
