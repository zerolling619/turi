<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PendingPayInProcess">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fd_celeste_degrade">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="644dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">

                <FrameLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/fd_blanco_circulo"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:src="@drawable/ic_approved_circle"
                        android:layout_marginTop="-22dp"
                        android:layout_marginLeft="-8dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pago Realizado!"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="70dp"
                    android:text="¡Felicidades! Has adquirido tu paquete turístico. Prepárate para vivir una experiencia única llena de aventura y descanso"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TvGenerated"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/fd_blanco_bordes_10"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="89dp"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/ImgRuta"
                                        android:layout_width="80dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/none_tras"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp">

                                    <TextView
                                        android:id="@+id/tvTituloRuta"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Titulo de la ruta"
                                        android:textColor="@color/azul_oscuro" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/ic_location_blue" />

                                    <TextView
                                        android:id="@+id/tvTituloPaquete"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Titulo de la ruta"
                                        android:textColor="@color/azul_oscuro" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/ic_calendar_blue" />

                                    <TextView
                                        android:id="@+id/tvtvTituloFecha"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Titulo de la ruta"
                                        android:textColor="@color/azul_oscuro" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/ic_car_blue" />

                                    <TextView
                                        android:id="@+id/tvNombreConductor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Titulo de la ruta"
                                        android:textColor="@color/azul_oscuro" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:orientation="horizontal"

                                    android:padding="3dp">

                                    <TextView
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Punto de Inicio"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                    <TextView
                                        android:id="@+id/tvPuntoInicio"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Punto de Inicio"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:orientation="horizontal"

                                    android:padding="3dp">

                                    <TextView
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Punto de Salida"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                    <TextView
                                        android:id="@+id/tvPuntoSalida"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Punto de Salida"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:orientation="horizontal"

                                    android:padding="3dp">

                                    <TextView
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Hora"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                    <TextView
                                        android:id="@+id/tvHora"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Hora"
                                        android:textColor="@color/azul_oscuro"
                                        android:textSize="9sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="3dp">

                                    <TextView
                                        android:layout_width="164dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:text="Total"
                                        android:textColor="@color/azul_oscuro" />

                                    <TextView
                                        android:id="@+id/tvPrecio"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="S/."
                                        android:textColor="@color/azul_oscuro" />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>