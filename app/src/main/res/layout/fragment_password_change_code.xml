<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fd_celeste_degrade"
    tools:context=".ui.Password_change_code">

    <!-- Título -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="70dp"
            android:gravity="center"
            android:text="Codigo de Cambio de contraseña"
            android:textColor="@color/azul_oscuro"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Terminos de verificacion -->

    <!-- Example correo-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="150dp"
            android:gravity="center"
            android:text="Ingresa el código de verificación enviado para confirmar tu identidad y continuar con el proceso de cambio de contraseña."
            android:textColor="@color/azul_oscuro"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="150dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCorreoVerificacion"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="240dp"
            android:gravity="center"
            android:text="Enviar a example@hotmail.com"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="240dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Caja blanca con bordes redondeados -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="37dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="300dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/tvCodigo1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/fd_contorno_azu_fd_blancol"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tvCodigo2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/fd_contorno_azu_fd_blancol"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tvCodigo3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/fd_contorno_azu_fd_blancol"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tvCodigo4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fd_contorno_azu_fd_blancol"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/azul_oscuro"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- No puedes acceder al código-->

    <!-- Reenviar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="390dp"
            android:gravity="center"
            android:text="¿No puedes acceder al código?"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="390dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvReenviar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="420dp"
            android:gravity="center"
            android:text="Reenviar"
            android:textColor="@color/azul_oscuro"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="420dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="300sp"
            android:layout_height="40dp"
            android:background="@drawable/fd_btn_azul_bordes"
            android:text="Enviar"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="470dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>