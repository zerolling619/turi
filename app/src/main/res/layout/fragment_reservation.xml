<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Reservation">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="644dp"
                android:background="@drawable/fd_btn_azul_bordes"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="120sp"
                        android:text="Reserva"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Fila con Numero de documento y opcion dni y carnet -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Numero de documento -->
                    <FrameLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Numero de documento"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDni"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/fd_contorno_azul"
                            app:boxBackgroundMode="none"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtDni"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/fd_contorno_azu_fd_blancol"
                                android:inputType="number"
                                android:maxLength="50"
                                android:padding="8dp"
                                android:paddingTop="8dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">

                        <!-- Opcion dni y carnet -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="178dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="17dp"
                            android:background="@drawable/fd_btn_gris_bordes">

                            <TextView
                                android:id="@+id/tvDetallesDestino"
                                android:layout_width="70dp"
                                android:layout_height="34sp"
                                android:background="@drawable/fd_btn_gris_oscuro_bordes"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="DNI"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvDetallesTracking"
                                android:layout_width="100dp"
                                android:layout_height="30sp"
                                android:layout_marginTop="3dp"
                                android:clickable="true"
                                android:elevation="5dp"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="CARNET EXT"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Nombre -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Nombre y apellido"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNombresyApelli"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="true"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNombresyApelli"
                            android:layout_width="327dp"
                            android:layout_height="40dp"
                            android:background="@drawable/fd_blanco_bordes_10"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:padding="8dp"
                            android:paddingTop="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>

                <!-- Listas de rutas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LinearLisRoute"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Rutas"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutRuta"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Selecciona ruta"
                            app:hintTextColor="@color/azul_oscuro">

                            <Spinner
                                android:id="@+id/spinnerRutas"
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:padding="0dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearFechaHora"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Fecha y hora de reserva"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/TvFechaHora"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/fd_blanco_bordes_10"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Ubicacion Turistica -->
                <LinearLayout
                    android:id="@+id/LinearUbiTuristic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="211dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Ubicacion Turistica"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilUbiTuristic"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/fd_contorno_azul"
                            app:boxBackgroundMode="none"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtUbiTuristic"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/fd_contorno_azu_fd_blancol"
                                android:inputType="text"
                                android:maxLength="50"
                                android:padding="8dp"
                                android:paddingTop="8dp"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </FrameLayout>

                </LinearLayout>

