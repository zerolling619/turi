                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <!-- Cantidad de Personas -->
                <LinearLayout
                    android:id="@+id/LinearCantPers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Can. de Personas"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCantPers"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/fd_contorno_azul"
                            app:boxBackgroundMode="none"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtCantPers"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/fd_contorno_azu_fd_blancol"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="8dp"
                                android:paddingTop="8dp"
                                android:textAlignment="center" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_marginLeft="15dp"
                        android:text="Servicios Adicionales"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <!-- Terramoza -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/CbTerramoza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="@color/white"
                            android:checked="false"
                            android:text="Terramoza"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- Guia Turistico -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/CbGuiaTuristic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="@color/white"
                            android:checked="false"
                            android:text="Guia Turistico"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Precio -->
                <LinearLayout
                    android:id="@+id/LinearPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Precio de Reserva"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/TvPrecio"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/fd_btn_gris_bordes"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Registrar Reserva -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/BtnRegisterReservation"
                        android:layout_width="195dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/fd_btn_gris_oscuro_bordes"
                        android:text="Registrar Reserva"
                        android:textColor="@color/azul_oscuro"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>